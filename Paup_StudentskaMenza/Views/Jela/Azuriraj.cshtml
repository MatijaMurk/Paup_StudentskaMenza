@using Paup_StudentskaMenza.Models

@model Jela


@if (ViewBag.Novi)
{
    <h2>Kreiranje jela</h2>
}
else
{
    <h2>Ažuriranje jela</h2>
    <h3>@Model.Naziv</h3>
}


@using (Html.BeginForm("Azuriraj", "Jela", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()


    @Html.ValidationSummary(true, "Ispravite podatke!");

    if (!ViewBag.Novi)
    {
    <div class="form-group">
        @Html.LabelFor(model => model.Id, new { @class = "col-md-2  control-label" })
        <div class="col-md-2">
            @Html.TextBoxFor(model => model.Id, new { disabled = true, @class = "form-control" })
        </div>
    </div>
    }


    <div class="form-group">
        @Html.LabelFor(model => model.Naziv, htmlAttributes: new { @class = "col-md-2   control-label" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Naziv, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Naziv, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Opis, htmlAttributes: new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Opis, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Opis, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Cijena, htmlAttributes: new { @class = "col-md-2  control-label" })
        <div class="col-md-2">
            <div class="input-group">
                <span class="input-group-addon">KN</span>
                @Html.EditorFor(model => model.Cijena, new { htmlAttributes = new { @class = "form-control" } })
                <span class="input-group-addon">.00</span>

            </div>
            @Html.ValidationMessageFor(model => model.Cijena, "", new { @class = "text-danger" })
        </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Vege, htmlAttributes: new { @class = "col-md-2  control-label" })
            <div class="col-md-3">
                <div class="checkbox-inline">  @Html.CheckBoxFor(model => model.Vege)</div>
                  
                    @Html.ValidationMessageFor(model => model.Vege, "", new { @class = "text-danger" })
               
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-success">
                    <span class="glyphicon glyphicon-floppy-disk" aria-hidden="false"></span> Spremi
                </button>
            </div>
        </div>

        }

        <div>
            @Html.ActionLink("Povratak", "Index", "Jela")
        </div>

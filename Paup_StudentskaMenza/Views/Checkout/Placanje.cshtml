@model Paup_StudentskaMenza.Models.Narudzba

@{
    ViewBag.Title = "Placanje";
}


<script src="@Url.Content("~/Scripts/jquery.validate.min.js")"
        type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")"
        type="text/javascript"></script>

<h2>Plaćanje</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
   
    <p>
        Besplatno uz promo kod: "FREE"
    </p>
    <div class="editor-label">
        @Html.Label("Promo Kod")
    </div>
    <div class="editor-field">
        @Html.TextBox("PromoKod")
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" id="submitButton" value="Kupi" class="btn btn-info" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Povratak", "Index","SopingKosarica")
</div>

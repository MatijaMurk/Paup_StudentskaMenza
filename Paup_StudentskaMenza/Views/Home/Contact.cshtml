@using Paup_StudentskaMenza.Models
@model Mail
@{
    ViewBag.Title = "Kontakt";
}
<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Contact", "Home", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.ValidationSummary()
<div class="row">
    <div class="form-group">
        <label for="textArea" class="col-lg-2 control-label">Novo jelo</label>
        <div class="col-lg-2">
            @Html.TextAreaFor(model => model.Poruka, new { @placeholder = "Poruka *" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button name="submit" type="submit" class="btn btn-primary">Pošalji</button>
        </div>
    </div>
</div>
<span style="color:green">@ViewBag.Message</span>
        }
